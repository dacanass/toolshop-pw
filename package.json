    "@types/node": "^25.3.0",
    "dotenv": "^17.3.1",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-playwright": "^2.7.0",
    "globals": "^15.14.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.20.0"
  }
