{
  "name": "toolshop-ecommerce-e2e-api-playwright",
  "version": "1.0.0",
  "description": "framework de automatización de pruebas para el sitio web de demostración Toolshop using Playwright and TypeScript.",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test --config=src/config/playwright.config.ts",
    "test:ui": "npx playwright test --config=src/config/playwright.config.ts --ui",
    "test:chrome": "npx playwright test --config=src/config/playwright.config.ts --project=chromium",
    "testspecific": "npx playwright test example --config=src/config/playwright.config.ts",
    "codegen":"npx playwright codegen",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
